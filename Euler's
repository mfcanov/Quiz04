
#include <iostream>
using namespace std;

double factorial(int n){
  double fact = 1;
  for (int i = 1; i <= n; i++){
  if (n==0){
    return 1;
  }
  else {
  fact = fact * i;
  }
}
return fact;
}

float euler_calc (float ac){
  float e = 1.0;
  for (int i=1; i<=ac; i++){
    e = e + 1/(factorial(i));
  }
  return e;
}

int main(){
  float ac;
  cout<<"How accurate you want the e number? ";
  cin>>ac;
  cout<<"The number is: "<<endl;
 cout<<euler_calc(ac);
 cout<<endl;
  return 0;
}
